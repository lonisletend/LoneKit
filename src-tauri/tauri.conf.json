{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "LoneKit",
    "version": "0.0.2"
  },
  "tauri": {
    "allowlist": {
      "clipboard": {
        "all": true,
        "writeText": true,
        "readText": true
      },
      "shell": {
        "all": true,
        "open": true
      },
      "globalShortcut": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.lonestack.lonekit",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "LoneKit",
        "width": 1200,
        "height": 800
      }
    ]
  }
}
